# .env.example (à copier vers .env)
# Variables d'environnement pour le frontend

# URL de l'API en développement (avec Netlify Dev)
# VITE_API_BASE_URL=http://localhost:8888

# URL de l'API en production (sera remplacée automatiquement)
VITE_API_BASE_URL=https://kidseventstickets.netlify.app

# Configuration de l'application
VITE_APP_NAME="KIDS EVENTS - Village de Noël"
VITE_APP_VERSION=1.0.0

# Configuration des timeouts API (en millisecondes)
VITE_API_TIMEOUT=30000

# Mode debug (true/false)
VITE_DEBUG_MODE=true

# Configuration Mobile Money (pour les tests)
VITE_MM_SIMULATION=true

# Variables pour PWA
VITE_PWA_NAME="KIDS EVENTS"
VITE_PWA_SHORT_NAME="KidsEvents"
VITE_PWA_DESCRIPTION="Billetterie Village de Noël"